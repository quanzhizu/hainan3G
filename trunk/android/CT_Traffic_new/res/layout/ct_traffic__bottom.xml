        android:id="@+id/id_bottom_car_park"
        style="@style/ct_traffic__bottom"
        android:src="@drawable/ct_traffic__car_park" />

    <ImageButton
        android:id="@+id/id_bus_routes"
        style="@style/ct_traffic__bottom"
        android:src="@drawable/ct_traffic__bus_routes" />

    <ImageButton
        android:id="@+id/id_bottom_traffic"
        style="@style/ct_traffic__bottom"
        android:src="@drawable/ct_traffic__traffic" />

    <ImageButton
        android:id="@+id/id_bottom_search"
        style="@style/ct_traffic__bottom"
        android:src="@drawable/ct_traffic__search_normal" />

    <ImageButton
        android:id="@+id/id_bottom_hotspot"

<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ct_traffic__tip_pointer_button_normal"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/LinearLayoutPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/LinearLayoutPoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip" >

            <TextView
                android:id="@+id/PoiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:singleLine="false"
                android:textColor="@color/ct_traffic__popup_textview_color"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/PoiAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/ct_traffic__popup_add_textview_color"
                android:textSize="12.0sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ImageButtonRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:contentDescription="@null"
            android:duplicateParentState="true"
            android:src="@drawable/ct_traffic__navigation" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/ct_traffic__popup_line" />

    <ImageView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:contentDescription="@null"
        android:src="@drawable/ct_traffic__feedback" />

</LinearLayout>